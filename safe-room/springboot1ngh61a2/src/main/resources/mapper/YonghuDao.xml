<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.YonghuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.YonghuEntity" id="yonghuMap">
        <result property="yonghuzhanghao" column="yonghuzhanghao"/>
        <result property="mima" column="mima"/>
        <result property="yonghuxingming" column="yonghuxingming"/>
        <result property="touxiang" column="touxiang"/>
        <result property="xingbie" column="xingbie"/>
        <result property="shengao" column="shengao"/>
        <result property="tizhong" column="tizhong"/>
        <result property="shoujihaoma" column="shoujihaoma"/>
        <result property="huiyuankahao" column="huiyuankahao"/>
        <result property="youxiaoqizhi" column="youxiaoqizhi"/>
        <result property="status" column="status"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.YonghuVO" >
		SELECT * FROM yonghu  yonghu         
        <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment.trim() != ''">
            <choose>
                <when test="ew.sqlSegment.trim().toUpperCase().startsWith('ORDER') or ew.sqlSegment.trim().toUpperCase().startsWith('GROUP') or ew.sqlSegment.trim().toUpperCase().startsWith('HAVING') or ew.sqlSegment.trim().toUpperCase().startsWith('LIMIT')">
                    ${ew.sqlSegment}
                </when>
                <otherwise>
                    <trim prefix="WHERE" prefixOverrides="AND |OR ">
                        ${ew.sqlSegment}
                    </trim>
                </otherwise>
            </choose>
        </if>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.YonghuVO" >
		SELECT  yonghu.* FROM yonghu  yonghu 	
 		<if test="ew != null and ew.sqlSegment != null and ew.sqlSegment.trim() != ''">
            <choose>
                <when test="ew.sqlSegment.trim().toUpperCase().startsWith('ORDER') or ew.sqlSegment.trim().toUpperCase().startsWith('GROUP') or ew.sqlSegment.trim().toUpperCase().startsWith('HAVING') or ew.sqlSegment.trim().toUpperCase().startsWith('LIMIT')">
                    ${ew.sqlSegment}
                </when>
                <otherwise>
                    <trim prefix="WHERE" prefixOverrides="AND |OR ">
                        ${ew.sqlSegment}
                    </trim>
                </otherwise>
            </choose>
        </if>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.YonghuView" >

		SELECT  yonghu.* FROM yonghu  yonghu 	        
        <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment.trim() != ''">
            <choose>
                <when test="ew.sqlSegment.trim().toUpperCase().startsWith('ORDER') or ew.sqlSegment.trim().toUpperCase().startsWith('GROUP') or ew.sqlSegment.trim().toUpperCase().startsWith('HAVING') or ew.sqlSegment.trim().toUpperCase().startsWith('LIMIT')">
                    ${ew.sqlSegment}
                </when>
                <otherwise>
                    <trim prefix="WHERE" prefixOverrides="AND |OR ">
                        ${ew.sqlSegment}
                    </trim>
                </otherwise>
            </choose>
        </if>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.YonghuView" >
		SELECT * FROM yonghu  yonghu
		<if test="ew != null and ew.sqlSegment != null and ew.sqlSegment.trim() != ''">
            <choose>
                <when test="ew.sqlSegment.trim().toUpperCase().startsWith('ORDER') or ew.sqlSegment.trim().toUpperCase().startsWith('GROUP') or ew.sqlSegment.trim().toUpperCase().startsWith('HAVING') or ew.sqlSegment.trim().toUpperCase().startsWith('LIMIT')">
                    ${ew.sqlSegment}
                </when>
                <otherwise>
                    <trim prefix="WHERE" prefixOverrides="AND |OR ">
                        ${ew.sqlSegment}
                    </trim>
                </otherwise>
            </choose>
        </if>
	</select>
	
    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM yonghu
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
          ${ew.sqlSegment}
        </trim>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM yonghu
                <trim prefix="WHERE" prefixOverrides="AND |OR ">
                  ${ew.sqlSegment}
                </trim>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM yonghu
                <trim prefix="WHERE" prefixOverrides="AND |OR ">
                  ${ew.sqlSegment}
                </trim>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM yonghu
                <trim prefix="WHERE" prefixOverrides="AND |OR ">
                  ${ew.sqlSegment}
                </trim>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM yonghu
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
          ${ew.sqlSegment}
        </trim>
        group by ${params.column}
    </select>



</mapper>
