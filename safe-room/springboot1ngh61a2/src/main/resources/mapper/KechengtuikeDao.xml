	<select id="selectListVO"
		resultType="com.entity.vo.KechengtuikeVO" >
		SELECT * FROM kechengtuike  kechengtuike         
        <where>
            ${ew.sqlSegment}
        </where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.KechengtuikeVO" >
		SELECT  kechengtuike.* FROM kechengtuike  kechengtuike 	
 		<where>
            ${ew.sqlSegment}
        </where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.KechengtuikeView" >

		SELECT  kechengtuike.* FROM kechengtuike  kechengtuike 	        
        <if test="ew != null and ew.sqlSegment != null and ew.sqlSegment.trim() != ''">
            <choose>
                <when test="ew.sqlSegment.trim().toUpperCase().startsWith('ORDER') or ew.sqlSegment.trim().toUpperCase().startsWith('GROUP') or ew.sqlSegment.trim().toUpperCase().startsWith('HAVING') or ew.sqlSegment.trim().toUpperCase().startsWith('LIMIT')">
                    ${ew.sqlSegment}
                </when>
                <otherwise>
                    <trim prefix="WHERE" prefixOverrides="AND |OR ">
                        ${ew.sqlSegment}
                    </trim>
                </otherwise>
            </choose>
        </if>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.KechengtuikeView" >
		SELECT * FROM kechengtuike  kechengtuike
		<where>
            ${ew.sqlSegment}
        </where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM kechengtuike
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
          ${ew.sqlSegment}
        </trim>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM kechengtuike
                <trim prefix="WHERE" prefixOverrides="AND |OR ">
                  ${ew.sqlSegment}
                </trim>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM kechengtuike
                <trim prefix="WHERE" prefixOverrides="AND |OR ">
                  ${ew.sqlSegment}
                </trim>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM kechengtuike
                <trim prefix="WHERE" prefixOverrides="AND |OR ">
                  ${ew.sqlSegment}
                </trim>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM kechengtuike
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
          ${ew.sqlSegment}
        </trim>
        group by ${params.column}
    </select>




