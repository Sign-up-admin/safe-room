{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": false,

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitOverride": false,
    "exactOptionalPropertyTypes": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Vue specific */
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "**/*.vue.js",
    "**/*.js.map",
    "src/**/*.js",
    "src/**/*.vue.js",
    "**/*.js.map",
    "src/components/Breadcrumb.vue.js",
    "src/components/CountDown.vue.js",
    "src/components/Editor.vue.js",
    "src/components/FileUpload.vue.js",
    "src/components/img.vue.js",
    "src/components/timeable.vue.js",
    "src/pages/newstype/NewstypeDetail.vue.js",
    "tests/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}

