{
  "description": "前端测试质量门禁配置",
  "version": "1.0.0",
  "thresholds": {
    "lines": 85,
    "functions": 85,
    "branches": 80,
    "statements": 85
  },
  "testQuality": {
    "passRate": 95,
    "maxFailures": 5,
    "maxSkipped": 10
  },
  "performance": {
    "maxDuration": 600,
    "maxSlowTests": 3,
    "slowTestThreshold": 30
  },
  "checks": {
    "enableCoverageCheck": true,
    "enableTestQualityCheck": true,
    "enablePerformanceCheck": true,
    "enableDependencyCheck": true,
    "enableCodeQualityCheck": false
  },
  "reporting": {
    "generateHtmlReport": true,
    "generateJsonReport": true,
    "includeTrends": true,
    "notifyOnFailure": true
  },
  "projects": {
    "front": {
      "enabled": true,
      "coverageThresholds": {
        "lines": 85,
        "functions": 85,
        "branches": 80,
        "statements": 85
      },
      "testTypes": ["unit", "e2e"]
    },
    "admin": {
      "enabled": true,
      "coverageThresholds": {
        "lines": 85,
        "functions": 85,
        "branches": 80,
        "statements": 85
      },
      "testTypes": ["unit", "e2e"]
    }
  },
  "ci": {
    "failOnThresholdBreach": true,
    "blockMergeOnFailure": true,
    "requireReviewOnFailure": false
  },
  "notifications": {
    "slack": {
      "enabled": false,
      "webhookUrl": "",
      "channels": ["#test-quality"]
    },
    "email": {
      "enabled": false,
      "recipients": [],
      "smtp": {}
    }
  }
}
